ip6tables -P INPUT DROP
ip6tables -P OUTPUT DROP
ip6tables -P FORWARD DROP
ip6tables -A FORWARD -i 1 -s 2001:db8::0/32 -j DROP
ip6tables -A FORWARD -o 1 -s 2001:db8:3::0/64 -j ACCEPT
ip6tables -A FORWARD -d 2001:db8:2::0/64 -p tcp --dport 80 -j ACCEPT
ip6tables -A FORWARD -s 2001:db8:3::0/64 -d 2001:db8:2::0/64 -p tcp --dport 22 -j ACCEPT
